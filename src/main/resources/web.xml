    </servlet>
    <servlet-mapping>
        <servlet-name>TransactionCategoryUpdatingServlet</servlet-name>
        <url-pattern>/category/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TransactionCategoryViewingServlet</servlet-name>
        <servlet-class>ru.yusof.Web.TransactionCategoryViewingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransactionCategoryViewingServlet</servlet-name>
        <url-pattern>/category/show</url-pattern>
