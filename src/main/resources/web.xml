    </servlet>
    <servlet-mapping>
        <servlet-name>TransCatUpdatingServlet</servlet-name>
        <url-pattern>/updateTransCat</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TransCatViewingServlet</servlet-name>
        <servlet-class>ru.yusof.Web.TransCatViewingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransCatViewingServlet</servlet-name>
