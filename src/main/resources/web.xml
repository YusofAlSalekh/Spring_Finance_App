    </servlet>
    <servlet-mapping>
        <servlet-name>AccountUpdatingNameServlet</servlet-name>
        <url-pattern>/account/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TransactionCategoryCreationServlet</servlet-name>
        <servlet-class>ru.yusof.Web.TransactionCategoryCreationServlet</servlet-class>
    </servlet>
