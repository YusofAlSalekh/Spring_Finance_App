<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="init" author="yusof">
        <createTable tableName="client">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints unique="true" nullable="false" primaryKey="true" />
            </column>
            <column name="email" type="varchar(255)">
                <constraints unique="true" nullable="false" />
            </column>
            <column name="password" type="varchar(255)" >
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1" author="yusof">
        <createTable tableName="account">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints unique="true" nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="balance" type="int">
                <constraints nullable="false" />
            </column>
            <column name="client_id" type="int">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="yusof">
        <createTable tableName="category">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints unique="true" nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="client_id" type="int">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="yusof">
        <createTable tableName="transaction">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints unique="true" nullable="false" primaryKey="true" />
            </column>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="sender_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_transaction_sender_account" references="account(id)"/>
            </column>
            <column name="receiver_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_transaction_receiver_account" references="account(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4" author="yusof">
        <createTable tableName="transaction_to_category">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints unique="true" nullable="false" primaryKey="true" />
            </column>
            <column name="transaction_id" type="int">
                <constraints nullable="false" />
            </column>
            <column name="category_id" type="int">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>